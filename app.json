{
  "expo": {
    "name": "sharplook",
    "slug": "sharplook",
    "version": "1.1.3",
    "orientation": "portrait",
    "icon": "./assets/icon/app-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon/sharplooklogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "sharplook",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.techtrove.sharplook",
      "buildNumber": "17",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app uses the camera to allow users to upload profile and service photos.",
        "NSFaceIDUsageDescription": "This app uses Face ID to provide secure biometric authentication for login.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to allow audio input for communication and video recording.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to provide nearby services and improve recommendations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location in the background to keep features updated.",
        "NSPhotoLibraryUsageDescription": "This app uses your photo library to allow you to select and upload profile and service photos.",
        "NSPhotoLibraryAddUsageDescription": "This app saves photos to your library for profile pictures and service images.",
        "UIBackgroundModes": ["remote-notification"],
        "NSUserNotificationsUsageDescription": "This app uses notifications to keep you updated about bookings, messages, and important updates.",
        "NSUserNotificationAlertStyle": "alert"
      },
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.techtrove.sharplook",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "POST_NOTIFICATIONS",
        "RECEIVE_NOTIFICATIONS",
        "SYSTEM_ALERT_WINDOW",
        "ACCESS_NETWORK_STATE"
      ],
      "versionCode": 44,
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json",
      "allowBackup": true,
      "foregroundServiceType": ["dataSync", "location"],
      "notification": {
        "icon": "./assets/icon/app-icon.png",
        "color": "#EB278D",
        "androidMode": "default",
        "androidCollapsedTitle": "New Notification"
      }
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon/app-icon.png"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "useModularHeaders": true
          }
        }
      ],
      ["@react-native-firebase/app"],
      [
        "@react-native-firebase/messaging",
        {
          "defaultNotificationColor": "#ffffff",
          "defaultNotificationIcon": "./assets/icon/app-icon.png"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "704cc27d-eb97-43a5-bdca-aa813b95f72c"
      }
    },
    "owner": "inuud"
  }
}
